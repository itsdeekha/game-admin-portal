{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc && tsc-alias",
    "start": "NODE_ENV=production node dist/main.js",
    "dev": "NODE_ENV=development nodemon --exec tsx src/main.ts",
    "typeorm": "env-cmd node ./node_modules/typeorm/cli.js",
    "migration:create": "yarn typeorm migration:create",
    "migration:run": "yarn typeorm --d=dist/infra/database/data-source.js migration:run",
    "migration:revert": "yarn typeorm --d=dist/infra/database/data-source.js migration:revert"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.888.0",
    "@aws-sdk/s3-presigned-post": "^3.888.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "dotenv": "^17.2.2",
    "env-cmd": "^11.0.0",
    "fast-jwt": "^6.0.2",
    "fastify": "^5.6.0",
    "http-status-codes": "^2.3.0",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.2.2",
    "slugify": "^1.6.6",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "nodemon": "^3.1.10",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "dist",
      "node_modules"
    ]
  }
}
